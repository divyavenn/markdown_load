{
  "manifest_version": 3,
  "name": "Markdown.load",
  "description": "Save Substack articles as Markdown with one click.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Markdown.load"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page_capture.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.substack.com/*",
    "https://x.com/*",
    "https://*.x.com/*",
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "http://127.0.0.1/*",
    "http://127.0.0.1:8000/*",
    "http://localhost/*",
    "http://localhost:8000/*",
    "https://divyavenn--markdownload-backend-fastapi-app.modal.run/*",
    "https://*.modal.run/*"
  ]
}
